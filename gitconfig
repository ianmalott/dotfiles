[alias]
  a = add
  amend = commit --amend
  b = branch
  ba = branch -a
  bname = rev-parse --abbrev-ref HEAD
  br = branch -r
  back = checkout -
  cm = commit
  co = checkout
  com = checkout master
  ctags = !.git/hooks/ctags
  d = diff
  dc = diff --check
  dcw = diff --color-words
  dno = diff --name-only
  ds = diff --staged
  dstat = diff --stat
  du = !git d $(git upstream)
  f = fetch
  ff = merge --ff-only
  ffu = !git ff $(git upstream)
  files = diff --name-only master...head
  filesacmr = diff --name-only master...head --diff-filter=ACMR
  filescp = !git diff --name-only master...head | pbcopy
  head = log -1
  l = log --no-decorate
  l1 = l -1
  lb = l --oneline master..
  lg = log --graph --pretty=format:'%C(yellow)%h%Creset %s %C(cyan)%d %C(black) %an, %cr%Creset'
  ll = log -p master.. .
  llc = log -p --color-words master.. .
  lo = l --oneline
  ls = l --oneline -n20
  mb = merge-base
  mbm = merge-base master head
  p = pull
  pup = !git push -u origin $(git bname) # push upstream
  rbimbm = !git rebase -i $(git mbm)
  rbc = rebase --continue
  rbs = am --show-current-patch
  rmc = rm --cached
  s = status
  sh = show
  shb = !git show $(git mbm)...
  shm = !sh -c 'git diff $1^1...$1^2' -
  shno = show --pretty='format:' --name-only
  shstat = show --stat
  touch = !git commit --amend --date $(isodate)
  unstage = reset HEAD
  untracked = ls-files --others --exclude-standard
  upstream = !git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD)
[color]
  ui = auto
[color "diff"]
  meta = blue
  frag = cyan
[core]
  excludesfile = ~/.gitignore
[diff]
  tool = vimdiff
[init]
  templatedir = ~/.gittemplates
[merge]
  conflictstyle = merge # diff3 also shows the merge base
[push]
  default = upstream
[user]
  name = Ian Malott
  email = ian@ianmalott.com
[github]
  user = ianmalott
