#!/usr/bin/env bash

#
# AWS CLI
#

# Enable completion for 'aws'
complete -C aws_completer aws

#
# Git
#

source ~/.dotfiles/bash/git-completion
GIT_PS1_SHOWDIRTYSTATE=true # unstaged (*), staged (+)
GIT_PS1_SHOWSTASHSTATE=true # stashed ($)
GIT_PS1_SHOWUNTRACKEDFILES=true # untracked (%)

# Enable completion for 'g'
complete -o bashdefault -o default -o nospace -F _git g 2>/dev/null || complete -o default -o nospace -F _git g

#
# Yat.sh
#

source ~/.yat.sh/completions/_yat.sh.bash

# Enable completion for 'y'
complete -F _yat.sh y

#
# Prompt
#

PS1="\n$BLD_WHI\u$REG_RED@$REG_BLU\h $REG_CYA\w$BLD_GRE \$(__git_ps1 "%s")\n‚ùØ$DEFAULT "
