# Aliases
alias grep='grep --color=auto'
alias grepn='grep -n'
alias grepv='grep -v'
alias c='clear'
alias h='cd $HOME'
alias ipe='ipconfig getifaddr en0'
alias ipw='ipconfig getifaddr en1'
alias isodate='date "+%Y-%m-%dT%H:%M:%S"'
alias ls='ls -G'

# Config Management
alias dotfiles='cd ~/.dotfiles'
alias ealias='vim ~/.dotfiles/bash/aliases'
alias ebashconf='vim ~/.dotfiles/bash/config'
alias ebashrc='vim ~/.dotfiles/bashrc'
alias eirbrc='vim ~/.dotfiles/irbrc'
alias escreenrc='vim ~/.dotfiles/screenrc'
alias evimrc='vim ~/.dotfiles/vimrc'
alias salias='. ~/.dotfiles/bash/aliases'
alias sbashconf='. ~/.dotfiles/bash/config'
alias sbashrc='. ~/.dotfiles/bashrc'

# Git
alias g='git'

# Project-specific screen sessions
for project in levelup scvngr; do
  # cd triggers rvm after_cd hook, which sources project .rvmrc to switch ruby/gemset & export PROJECT
  alias $project="cd $HOME/projects/$project; screen -S $project -R -c $HOME/.dotfiles/screen/$project"
done

# Testing
alias rtf='rake test:functionals'
alias rtn='ruby -Itest'
alias rtu='rake test:units'
